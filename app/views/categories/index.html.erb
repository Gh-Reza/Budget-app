<section class="section">
  <ul>
    <% @categories.each do |category| %>
      <li>
        <div>
          <%= image_tag category.icon if category.icon.attached? %>
        </div>
        <div>
          <%= category.name %>
        </div>
        <div>
          <%= category.get_total_purchases %>
        </div>
      </li>
    <% end %>
  </ul>

  <div>
    <%= link_to 'New Category', new_category_path %>
  </div>
</section>