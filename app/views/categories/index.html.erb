<section class="section">
  <ul>
    <% @categories.each do |category| %>
      <li>
        <div>
          <img src="<%= category.icon %>" alt="category icon">
        </div>
        <div>
          <%= category.name %>
        </div>
        <div>
          <%= category.get_total_purchases %>
        </div>
      </li>
    <% end %>
  </ul>
</section>