<section class="section">
  <h1>Add Category</h1>
  <%= form_with model: @category, method: :post do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.file_field :icon %>
    </div>
    <div class="field">
      <%= f.submit "Add Category" %>
    </div>
  <% end %>
</section>